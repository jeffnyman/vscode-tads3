{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TADS 3",
  "patterns": [
    {
      "include": "#top"
    }
  ],
  "repository": {
    "top": {
      "patterns": [
        {
          "include": "#comments"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "match": "#.*$",
          "name": "comment.line.bang.tads3buildfile"
        }
      ]
    }
  },
  "scopeName": "source.tads3.buildfile"
}
